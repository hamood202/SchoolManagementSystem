<body>
    <div class="auth-layout-wrap">
        <div class="sign-card">
            <div class="sign-bg">
                <div class="mb-3">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i> الرجوع إلى الصفحة الرئيسية
                    </a>
                </div>
                <input asp-for="Id" type="hidden">
                <form method="post" asp-controller="Account" asp-action="Register" enctype="multipart/form-data" role="form">
                    <input asp-for="Id" type="hidden">
                    <div class="row signin-res-center">
                        <h3 class="text-center text-b mb-4">إنشاء حساب جديد</h3>

                        <div class="col-md-6 signin-res-70">
                            <div class="alert alert-danger" id="errorMessage" style="display:none;"></div>

                            <!-- المعلومات الشخصية -->
                            <div class="input-group">
                                <i class="fas fa-user input-icon"></i>
                                <input asp-for="FirstName" type="text" class="input" placeholder="الاسم الاول">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="input-group">
                                <i class="fas fa-user input-icon"></i>
                                <input asp-for="LastName" type="text" class="input" placeholder="الاسم الاخير">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="input-group">
                                <i class="fas fa-envelope input-icon"></i>
                                <input asp-for="Email" type="email" class="input" placeholder="البريد الإلكتروني">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="input-group">
                                <i class="fas fa-phone input-icon"></i>
                                <input asp-for="Phone" type="tel" class="input" placeholder="رقم الهاتف">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <!-- كلمة المرور -->
                            <div class="input-group">
                                <i class="fas fa-lock input-icon"></i>
                                <input type="password" asp-for="Password" class="input" id="password" placeholder="كلمة المرور">
                                <span class="password-toggle" onclick="togglePassword()">
                                    <i class="fas fa-eye" id="toggleIcon"></i>
                                </span>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="input-group">
                                <i class="fas fa-lock input-icon"></i>
                                <input type="password" asp-for="ConfirmPassword" class="input" id="confirmPassword" placeholder="تأكيد كلمة المرور">
                                <span class="password-toggle" onclick="togglePassword('confirmPassword')">
                                    <i class="fas fa-eye" id="toggleConfirmIcon"></i>
                                </span>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <!-- الشروط والأحكام -->
                            <div class="input-group terms-checkbox">
                                <label class="remember-me-label">
                                    <input type="checkbox" class="remember-me-input" id="agreeTerms" name="AgreeTerms" required>
                                    @* <span class="remember-me-checkbox"></span> *@
                                    <span class="remember-me-text">أوافق على <a href="/Terms" class="text-primary">الشروط والأحكام</a> و <a href="/Privacy" class="text-primary">سياسة الخصوصية</a></span>
                                </label>
                            </div>

                            <!-- زر التسجيل -->
                            <div class="input-group">
                                <button type="submit" class="btn-main" id="submitBtn">
                                    <span id="btnText">إنشاء حساب</span>
                                    <span id="btnSpinner" style="display:none;">
                                        <i class="fas fa-spinner fa-spin"></i> جاري المعالجة...
                                    </span>
                                </button>
                            </div>

                            <!-- رابط تسجيل الدخول -->
                            <div class="text-center mt-3">
                                <span>لديك حساب بالفعل؟ <a href="/Account/Login" class="text-primary">تسجيل الدخول</a></span>
                            </div>
                        </div>

                        <!-- الصورة الجانبية -->
                        <div class="col-md-6 res">
                            <img class="img-fluid" src="/images/register-illustration.png" alt="إنشاء حساب جديد">
                        </div>
                    </div>
