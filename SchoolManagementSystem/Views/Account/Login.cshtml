            font-weight: 500;
            z-index: 2;
        }

            .back-home-btn:hover {
                text-decoration: underline;
            }

        .signin-res-center {
            display: flex;
            align-items: center;
        }

        h3.text-b {
            color: var(--secondary-color);
            font-weight: 700;
            margin-bottom: 30px;
            width: 100%;
        }

        .signin-res-70 {
            flex: 1;
            padding: 20px;
        }

        .input-group {
            position: relative;
            margin-bottom: 25px;
        }

        .input {
            width: 100%;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: var(--border-radius);
            font-size: 1rem;
            transition: var(--transition);
            background-color: #f8f9fa;
        }

            .input:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px rgba(231, 76, 60, 0.2);
                outline: none;
                background-color: white;
            }

        .input-label {
            position: absolute;
            top: 15px;
            right: 15px;
            color: #777;
            transition: var(--transition);
            pointer-events: none;
        }

        .input:focus + .input-label,
        .input:not(:placeholder-shown) + .input-label {
            top: -10px;
            right: 10px;
            font-size: 0.8rem;
            background: white;
            padding: 0 5px;
            color: var(--primary-color);
        }

        .btn-main {
            background: linear-gradient(to right, var(--primary-color), var(--accent-color));
            color: white;
            border: none;
            padding: 12px;
            border-radius: var(--border-radius);
            font-weight: 600;
            width: 100%;
            cursor: pointer;
            transition: var(--transition);
        }

            .btn-main:hover {
                background: linear-gradient(to right, var(--accent-color), var(--primary-color));
                transform: translateY(-2px);
                box-shadow: var(--box-shadow);
            }

        .btn-main-border {
            display: block;
            padding: 12px;
            border: 2px solid var(--primary-color);
            border-radius: var(--border-radius);
            color: var(--primary-color);
            font-weight: 600;
            text-align: center;
            text-decoration: none;
            transition: var(--transition);
        }

            .btn-main-border:hover {
                background-color: var(--primary-color);
                color: white;
            }

        .text-primary {
            color: var(--primary-color) !important;
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.9rem;
        }

        .sign-w-google {
            display: inline-flex;
            align-items: center;
            padding: 8px 15px;
            background-color: #db4437;
            color: white;
            border-radius: var(--border-radius);
            text-decoration: none;
            transition: var(--transition);
        }

            .sign-w-google:hover {
                background-color: #c23321;
                color: white;
            }

            .sign-w-google i {
                margin-left: 8px;
            }

        .log-thump {
            max-width: 100%;
            height: auto;
            display: block;
            margin: 0 auto;
        }

        /* تأثيرات خاصة */
        .blob {
            position: absolute;
            bottom: -50px;
            left: -50px;
            width: 200px;
            height: 200px;
            background: rgba(52, 152, 219, 0.1);
            border-radius: 50%;
            filter: blur(40px);
            z-index: -1;
        }

        .social-icons {
            display: flex;
            justify-content: center;
            gap: 15px;
        }

        .social-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.2rem;
            transition: var(--transition);
        }

            .social-icon.facebook {
                background-color: #3b5998;
            }

            .social-icon.twitter {
                background-color: #1da1f2;
            }

            .social-icon.google {
                background-color: #db4437;
            }

            .social-icon:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
            }


        .password-toggle {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #777;
            z-index: 10;
        }

            .password-toggle:hover {
                color: var(--primary-color);
            }
        /* أنماط أيقونات الحقول */
        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #777;
            z-index: 10;
        }

        .input-group .input {
            padding-left: 40px; /* زيادة المسافة لترك مكان للأيقونة */
        }

        /* تعديل لون الأيقونة عند التركيز على الحقل */
        .input:focus ~ .input-icon {
            color: var(--primary-color);
        }



        /* أنماط خاصة بخانة تذكرني */
        .remember-me-container {
            margin: 15px 0;
            text-align: right;
        }

        .remember-me-label {
            display: flex;
            align-items: center;
            cursor: pointer;
            position: relative;
            user-select: none;
            gap: 8px;
            justify-content: flex-end;
        }

        .remember-me-input {
            position: absolute;
            opacity: 0;
            cursor: pointer;
            height: 0;
            width: 0;
        }

        .remember-me-checkbox {
            height: 20px;
            width: 20px;
            background-color: #f8f9fa;
            border: 2px solid #ddd;
            border-radius: 4px;
            transition: var(--transition);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .remember-me-input:checked ~ .remember-me-checkbox {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .remember-me-checkbox:after {
            content: "";
            display: none;
            width: 4px;
            height: 8px;
            border: solid white;
            border-width: 0 2px 2px 0;
            transform: rotate(45deg);
            margin-top: -2px;
        }

        .remember-me-input:checked ~ .remember-me-checkbox:after {
            display: block;
        }

        .remember-me-text {
            font-size: 0.9rem;
            color: var(--text-color);
        }

        /* تأثيرات عند التركيز */
        .remember-me-input:focus ~ .remember-me-checkbox {
            box-shadow: 0 0 0 3px rgba(231, 76, 60, 0.2);
        }

        /* تأثيرات عند hover */
        .remember-me-label:hover .remember-me-input ~ .remember-me-checkbox {
            border-color: var(--primary-color);
        }
