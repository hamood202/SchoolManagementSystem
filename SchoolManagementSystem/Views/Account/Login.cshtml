    <!-- سكربتات خاصة بصفحة تسجيل الدخول -->
    <script>
        $(document).ready(function () {
            // إدارة إرسال النموذج
            $('#loginForm').on('submit', function (e) {
                e.preventDefault();

                // عرض رسالة التحميل
                const btn = $(this).find('button[type="submit"]');
                const originalText = btn.html();
                btn.html('<i class="fas fa-spinner fa-spin"></i> جاري تسجيل الدخول...');
                btn.prop('disabled', true);

                // هنا يمكنك إضافة كود AJAX لإرسال البيانات
                // هذا مثال توضيحي:
                setTimeout(() => {
                    // في الواقع سيكون هناك طلب AJAX إلى الخادم
                    // window.location.href = '/'; // توجيه بعد نجاح التسجيل

                    // في حالة الخطأ (مثال فقط)
                    $('#errorMessage').text('بيانات الدخول غير صحيحة');
                    btn.html(originalText);
                    btn.prop('disabled', false);
                }, 1500);
            });

            // تأثيرات حقول الإدخال
            $('.input').each(function () {
                if ($(this).val() !== '') {
                    $(this).next('.input-label').addClass('input-label-active');
                }
            });

            $('.input').on('focus', function () {
                $(this).next('.input-label').addClass('input-label-active');
            });

            $('.input').on('blur', function () {
                if ($(this).val() === '') {
                    $(this).next('.input-label').removeClass('input-label-active');
                }
            });
        });




        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.getElementById('toggleIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
    </script>
</body>
